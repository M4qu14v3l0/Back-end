<h2>Historial</h2>

{{#if productosExiste}}
    <div class="table-responsive">
        <table class="table table-dark">
            <tr style="color: yellow;">
                <th>Nombre</th>
                <th>Precio</th>
                <th>Imagen</th>
            </tr>
            {{#each productos}}
                <tr>
                    <td>{{title}}</td>
                    <td>{{price}}</td>
                    <td><img src={{thumbnail}} alt={{title}}></td>
                </tr>
            {{/each}}
        </table>
    </div>
{{else}}
    <h3 class="alert alert-danger">no se encontraron datos</h1>
{{/if}}

<a href="/"><button class="btn btn-success mt-3 mb-5">Añadir más productos</button></a>